// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "assistant": {
    "version": "2",
    "default_open_ai_model": null,
    "default_model": {
      "provider": "ollama",
      "model": "gemma2:2b"
    }
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_family": "UDEV Gothic NF",
  "ui_font_size": 20,
  "buffer_font_family": "Moralerspace Radon NF",
  "buffer_font_size": 22,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ros√© Pine"
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": false,
    "runnables": false,
    "folds": false
  }
}